{% extends 'base.html.twig' %}

{% block title %}Bienvenue su Canisius-Formation.fr{% endblock %}

{% block body %}
 <main>
                <section class="py-5 text-center container">
                    <div class="row py-lg-5">
                    <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Canisius Formation</h1>
                    <p class="lead text-body-secondary">Bienvenue sur le milleur site de formation video en francais</p>
                    <p><a href="https://getbootstrap-com.translate.goog/docs/5.3/examples/album/?_x_tr_sl=en&amp;_x_tr_tl=fr&amp;_x_tr_hl=fr&amp;_x_tr_pto=sc#" class="btn btn-primary my-2">Voir les formation</a> <a href="https://getbootstrap-com.translate.goog/docs/5.3/examples/album/?_x_tr_sl=en&amp;_x_tr_tl=fr&amp;_x_tr_hl=fr&amp;_x_tr_pto=sc#" class="btn btn-secondary my-2">En savoir plus</a></p>
                    </div>
                    </div>
                </section>
                <div class="album py-5 bg-body-tertiary">
                    <div class="container"> 
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    
                    {% for tuto in tutos %}
                    <!--item 1 -->
                        <div class="col">
                            <div class="card shadow-sm">
                                <img width="100%" height="225" src="/uploads/{{ tuto.image}}">
                                    <title>Placeholder</title>
                                    <rect width="100%" height="100%" fill="#55595c" />
                                </img>
                                    <div class="card-body">
                                    <p class="card-text">{{ tuto.name }}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{ path('app_tuto_details', {'slug' : tuto.slug }) }}" class="btn btn-sm btn-outline-secondary">View</a>
                                            {% if app.user and "ROLE_ADMIN" in app.user.roles%} 
                                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                            {% endif %}
                                        </div>
                                        <small class="text-body-secondary">#{{ tuto.id }}</small>
                                        </div>
                                    </div>
                            </div>
                        </div>
                        {% endfor %}
                    <!--item 1 -->
                   
                    
                   
                    
                  
                  
                    </div>
                    </div>
                </div>
            </main>
{% endblock %}
