{% extends 'base.html.twig' %}

{% block title %}Le tuto{% endblock %}

{% block body %}
   <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">{{ tuto.name }}</h1>
                <img src="/uploads/{{tuto.image}}" style="width:100%"/>
                <p class="lead text-body-secondary">{{ tuto.description | raw}}</p>
                <p>
                    <a href="{{ tuto.link }}" target="blank" class="btn btn-primary my-2">Acheter le tuto</a> 
                    <a href="#" class="btn btn-secondary my-2">En savoir plus</a>
                </p>
                <h2>Trailer</h2>
<div>
    <iframe 
        width="560"
        height="315"
        src="{{ tuto.link | replace({'watch?v=': 'embed/'}) }}"
        title="Trailer {{ tuto.name }}"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen>
    </iframe>
</div>



            </div>
        </div>
    </section>
{% endblock %}
